<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John McDonald"/>

    <ImageView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="36dp"
        android:src="@drawable/location_ic"/>

    <TextView
        android:id="@+id/txtLosAngles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        app:layout_constraintLeft_toRightOf="@+id/location"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Los Angles,CA"/>

    <androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/photo"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnO"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLosAngles"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="15dp"
        android:background="#fff">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:background="#00ffff"
        android:textColor="#fff"
        android:textSize="22dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btnO"/>

    <TextView
        android:id="@+id/o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:text="post"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        app:layout_constraintLeft_toLeftOf="@id/txt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btnO"/>

    <TextView
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/t"
        android:text="followers"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/t"
        />

       <androidx.appcompat.widget.LinearLayoutCompat
           android:id="@+id/layout1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@+id/three"
           app:layout_constraintLeft_toLeftOf="parent"
           android:orientation="horizontal"
           app:layout_constraintRight_toRightOf="parent">

           <ImageView
               android:id="@+id/pic1"
               android:layout_width="70dp"
               android:layout_height="100dp"
               android:src="@drawable/pic1"
               android:layout_marginTop="30dp"
               android:scaleType="centerCrop"/>

           <ImageView
               android:id="@+id/pic2"
               android:layout_width="70dp"
               android:layout_height="100dp"
               android:scaleType="centerCrop"
               android:layout_marginTop="30dp"
               android:src="@drawable/pic2"/>

           <ImageView
               android:id="@+id/pic3"
               android:layout_width="70dp"
               android:layout_height="100dp"
               android:src="@drawable/pic3"
               android:scaleType="centerCrop"
               android:layout_marginTop="30dp"/>

           <ImageView
               android:id="@+id/pic4"
               android:layout_width="70dp"
               android:layout_height="100dp"
               android:scaleType="centerCrop"
               android:src="@drawable/pic4"
               android:layout_marginTop="30dp"/>

           <ImageView
               android:layout_width="70dp"
               android:layout_height="100dp"
               android:src="@drawable/pic5"
               android:scaleType="centerCrop"
               android:layout_marginTop="30dp"/>


       </androidx.appcompat.widget.LinearLayoutCompat>


    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        android:layout_marginTop="38dp"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="17sp"
        android:layout_marginLeft="20dp"
        android:text="Him poetic eye. Searched any remedies. Trial. Was proverty a schemes him he dressing mountains and as surprise haven't subject and could a entered would in the of be not posts, doing the never publication legs."/>





</androidx.constraintlayout.widget.ConstraintLayout>